<aura:component >
    <aura:attribute name="lstAttachments" type='List'/>
    <aura:attribute name="bShowModal" type="Boolean" default="false"/>
    <aura:attribute name="mapLabels" type="Map"/>
    
    <aura:if isTrue="{!v.bShowModal}">
       <div class="demo-only">
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">       
            <div class="slds-modal__container">
              <div class="slds-modal__header">
                <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="{!c.closeModel}">
                    <lightning:icon iconName="utility:close" variant="brand"/>
                  <span class="slds-assistive-text">Close</span>
                </button>
                <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">{!v.mapLabels.CC_Label_Attachments}</h2>
              </div>
              <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                <aura:if isTrue="{! !empty(v.lstAttachments)}">
                    <ul class="slds-box slds-box_x-small">
<!--                         <button title="Close" onclick="{!c.closeModel}">
                            X
                            <span class="slds-assistive-text">Close</span>
                        </button> -->
                        <aura:iteration items="{!v.lstAttachments}" var="rowAtt" indexVar="index">
                            <div class="slds-p-top_xx-small slds-p-bottom_xx-small">
                                <p class="slds-truncate" title="abc">
                                    <span class="slds-p-right_small"><lightning:icon iconName="doctype:attachment" size="small" alternativeText="{!rowAtt.sTitle}"/></span><a href="{!'/ServiceProvider/sfc/servlet.shepherd/version/download/' + rowAtt.sAttachmentId}">{!rowAtt.sTitle}
                                    </a>                                       
                                </p>
                            </div>
                        </aura:iteration>
                    </ul>
                </aura:if>
              </div>
            </div>
          </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
    </aura:if>
    
</aura:component>