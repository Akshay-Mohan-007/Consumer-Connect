<aura:component extends="c:CC_BaseSuperComponent" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">
    
    
    <aura:attribute name="sWrittenLang" type="String"/>
    <aura:attribute name="sSpokenLang" type="String"/>   
    <aura:attribute name="sOtherWrittenLang" type="String"/>	
    <aura:attribute name="sEmail" type="String"/>
    <aura:attribute name="lstSpokenLang" type="List"/>
    <aura:attribute name="lstWrittenLang" type="List"/>
    <aura:attribute name="bIsError" type="boolean" default="false"/>
    <aura:attribute name="lstOfPageErrors" type="String[]"/> 
    <aura:attribute name="mapLabels" type="Map"/>
  
    
    <!-- Attribute created for RI tab-->
    <aura:attribute name="lstPreferredLang" type="List"/>  
    <aura:attribute name="sPreferredLang" type="String"/>
    <aura:attribute name="sOtherPreferredLang" type="String"/>
    <aura:attribute name="hideOtherPreferredLang" type="String"/>
    <aura:attribute name="bHideWritSpokLang" type="Boolean" default="true"/>
    <aura:attribute name="bShowPrefLang" type="Boolean" default="False"/>
    
    
    
    <aura:method name="validateLangData" action="{!c.validateLangData}" access="PUBLIC">
        <aura:attribute name="callback" type="Function"/>
    </aura:method>
    <!--<aura:registerEvent name="callSave" type="c:CC_FireContactInfoSave"/> -->
    
    
    
    
    
     <aura:if isTrue="{!v.bHideWritSpokLang}">   
        <c:CC_HeaderComponent Header1="{!v.mapLabels.CC_Contact_OtherInformation}"/>
     </aura:if>
    
    <div class="slds-box slds-box_x-small slds-m-around_small">
    <lightning:layout horizontalAlign="spread" multipleRows="true">
        <lightning:layoutItem flexibility="grow" padding="around-small" size="12" largeDeviceSize="6" mediumDeviceSize="6" smallDeviceSize="12">
            
            <lightning:input type="email" 
                             label="{!v.mapLabels.CC_CONTACT_INFO_EMAIL}" 
                             name="email"
                             maxlength="255" 
                             value="{!v.sEmail}"/> 
        </lightning:layoutItem>
        
        
        <!-- Preferred language used for RI component-->
      <aura:if isTrue="{!v.bShowPrefLang}">
        <lightning:layoutItem flexibility="grow" padding="around-small" size="12" largeDeviceSize="6" mediumDeviceSize="6" smallDeviceSize="12">
                <lightning:select name="preferred Language" 
                                  label="{!v.mapLabels.CC_CONTACT_INFO_PREFERRED_LANG}"
                                  class="{!and(empty(v.sPreferredLang) ,  v.bIsError)? 'slds-has-error required-asterisk':'required-asterisk'}"
                                  value="{!v.sPreferredLang}"
                                 >       
                    <aura:iteration items="{!v.lstPreferredLang}" var="val">
                        <option text="{!val.sValue}" value="{!val.sKey}"/>
                    </aura:iteration>
                </lightning:select>
            </lightning:layoutItem>
          <aura:if isTrue="{!v.sPreferredLang=='Other'}">
         <lightning:layoutItem flexibility="grow" padding="around-small" size="12" largeDeviceSize="6" mediumDeviceSize="6" smallDeviceSize="12">
                
                <lightning:input type="String" 
                                 label="{!v.mapLabels.CC_Other_Preferred_Language}" 
                                 name="OtherPreferredLanguage" 
                                 value="{!v.sOtherPreferredLang}"
                                 class="{!and(empty(v.sPreferredLang) ,  v.bIsError)? 'slds-has-error required-asterisk':'required-asterisk'}"
                                  
                                 /> 
               </lightning:layoutItem>
          </aura:if>
       </aura:if>
        
        
        
         <aura:if isTrue="{!v.bHideWritSpokLang}">
        <lightning:layoutItem flexibility="grow" padding="around-small" size="12" largeDeviceSize="6" mediumDeviceSize="6" smallDeviceSize="12">
            
            <lightning:select name="spokenLang" 
                              label="{!v.mapLabels.CC_CONTACT_INFO_SPOKEN_LANG}" 
                              class="{!and(empty(v.sSpokenLang) ,  v.bIsError)? 'slds-has-error required-asterisk':'required-asterisk'}"
                              value="{!v.sSpokenLang}"
                              >
                <aura:iteration items="{!v.lstSpokenLang}" var="val">
                    <option text="{!val.sValue}" value="{!val.sKey}"/>
                </aura:iteration>
            </lightning:select>
        </lightning:layoutItem>
        
        
        <!--  Hide and show written Language from Representative Information Component  using aura:if-->
       
            <lightning:layoutItem flexibility="grow" padding="around-small" size="12" largeDeviceSize="6" mediumDeviceSize="6" smallDeviceSize="12">
                <lightning:select name="writtenLang" 
                                  label="{!v.mapLabels.CC_CONTACT_INFO_WRITTEN_LANG}" 
                                  class="{!and(empty(v.sWrittenLang), v.bIsError)? 'slds-has-error required-asterisk':'required-asterisk'}" 
                                  value="{!v.sWrittenLang}"
                                  >
                    <aura:iteration items="{!v.lstWrittenLang}" var="val">
                        <option text="{!val.sValue}" value="{!val.sKey}"/>
                    </aura:iteration>
                </lightning:select>
            </lightning:layoutItem>
        </aura:if>
        
        
        <aura:if isTrue="{!v.sWrittenLang=='Other'}">
            <lightning:layoutItem flexibility="grow" padding="around-small" size="12" largeDeviceSize="6" mediumDeviceSize="6" smallDeviceSize="12">
                
                <lightning:input type="String" 
                                 label="{!v.mapLabels.CC_Other_Written_Language}" 
                                 name="OtherWrittenLanguage" 
                                 value="{!v.sOtherWrittenLang}"
                                 /> 
               </lightning:layoutItem>
        </aura:if>
        
    </lightning:layout>	
    
    </div>
    
</aura:component>