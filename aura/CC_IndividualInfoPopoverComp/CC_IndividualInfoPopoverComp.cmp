<aura:component controller="CC_IndividualInfoPopoverController" extends="c:CC_BaseSuperComponent" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >

<aura:handler name="init" value="{!this}" action="{!c.doInit}" />  
<aura:handler event="c:PopoverEvent" action="{!c.popoverInit}"/>
    
<aura:attribute name="bPopover" type="boolean" default="true"/>
    
<aura:attribute name="sAppId" type="String"/>
<aura:attribute name="sAppName" type="String" />
<aura:attribute name="sIndName" type="String" />
<aura:attribute name="sGenderInfo" type="String" />
<aura:attribute name="sAge" type="String" />
<aura:attribute name="sResult" type="String" />
<aura:attribute name="sGenderLBL" type="String" />
  
    
<aura:attribute name="mapLabels" type="Map"/>

    <lightning:overlayLibrary aura:id="overlayLib"/>
    <lightning:layout horizontalAlign="left" multipleRows="true">	
        <lightning:layoutItem flexibility="grow" size="12" largeDeviceSize="12" mediumDeviceSize="12" smallDeviceSize="12" class="slds-show_small slds-p-around_xx-small section-background">
           <div class="slds-media" >
                        <div class="slds-media__figure slds-align_absolute-center">
                        
                          <span class="slds-avatar">
                            <aura:if isTrue="{!v.sGenderInfo == 'FEMALE'}">
                              <img alt="{!v.sIndName}" src="https://www.lightningdesignsystem.com/assets/images/avatar2.jpg" title="User avatar" />
                            </aura:if>
                            <aura:if isTrue="{!v.sGenderInfo == 'MALE'}">
                              <img alt="{!v.sIndName}" src="https://www.lightningdesignsystem.com/assets/images/avatar1.jpg" title="User avatar" />
                            </aura:if>
                        </span>
                        </div>


                        <div class="slds-media__body slds-p-around_xxx-small">
                           <h3 id="entity-header" class="slds-text-title_caps ind-app" > {!v.mapLabels.CC_LBL_Application} ({!v.sAppName})</h3> 
                           <h2 id="entity-header" class="slds-text-title_caps ind-name" >
                              <span class="mypopover link-text" 
                               name="popover" 
                               label="Show Popover" 
                               onclick="{!c.handleShowPopover}" 
                               >{!v.sIndName}</span></h2>
                            <h3 id="entity-header" class="slds-text-title_caps ind-age">
                            {!v.mapLabels.CC_LBL_AGE}: {!v.sAge}</h3>
                            <h3 id="entity-header" class="slds-text-title_caps ind-gender">
                           {!v.sGenderLBL}: {!v.sGenderInfo}</h3>
                        </div>
            </div>
            
            
            
           
            
         </lightning:layoutItem>
        
        
         <!--Start:Sayari[29-Nov-2017]: Responsive behaviour:this div appears for small screens only  -->
         <!--<lightning:layoutItem flexibility="grow" size="3" largeDeviceSize="3" mediumDeviceSize="3" smallDeviceSize="3" class="slds-hide_small slds-p-around_xx-small slds-align_absolute-center">
             <button class="slds-button slds-icon-waffle_container" title="Open Menu" onclick="{!c.toggleMenu}">
                     <span class="slds-icon-waffle">
