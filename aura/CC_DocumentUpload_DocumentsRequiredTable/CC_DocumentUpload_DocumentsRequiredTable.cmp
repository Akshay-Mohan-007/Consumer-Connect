 <aura:component extends="c:CC_BaseSuperComponent"  access="global">

  <aura:attribute name="docRequiredList" type="List"/>
  <aura:attribute name="docRequired" type="Object"/>
  <aura:attribute name="mapLabels" type="Map"/>
  <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>


     <lightning:layout horizontalAlign="left" multipleRows="true">
        <lightning:layoutItem flexibility="grow"  size="12" largeDeviceSize="12" mediumDeviceSize="12" smallDeviceSize="12" padding="around-small">
              <table class="slds-table slds-table_bordered slds-max-medium-table_stacked-horizontal">
                  <thead>
                      <tr class="slds-text-title_caps">
                          <th scope="col">
                              <div title="DocumentNeeded">{!v.mapLabels.CC_Label_What_Is_Needed}</div>
                          </th>
                          <th scope="col">
                              <div title="DocumentAccepted">{!v.mapLabels.CC_Label_Type_of_Document_Accepted}</div>
                          </th>
                      </tr>
                  </thead>
                  <tbody>
                      <aura:if isTrue="{!v.docRequiredList.length > 0}">
                          <aura:iteration items="{!v.docRequiredList}" var="docRequired" indexVar="index">
                              <!-- <c:CC_DocumentUpload_DocumentRequiredTableRow docRequired="{!s}" mapLabels="{!v.mapLabels}"></c:CC_DocumentUpload_DocumentRequiredTableRow> -->
                              <tr>
                                <td data-label="{!v.mapLabels.CC_Label_What_Is_Needed}" 
                                    class ="{! and(docRequired.bMandatory,!docRequired.bMandatory) ? 'slds-required' :''}">
                                    <div>{!docRequired.sRequired}</div>
                                </td>
                                <td data-label="{!v.mapLabels.CC_Label_Type_of_Document_Accepted}">
                                    <div>{!docRequired.sDocTypes}</div>
                                </td>
                                
                                
                            </tr>
                          </aura:iteration>
                      </aura:if>
                      <aura:if isTrue="{!v.docRequiredList.length == 0}">
                        <tr>
                           <td colspan="2">
                             <div class="slds-truncate slds-text-align_center" title="">{!v.mapLabels.CC_Documents_Not_Required}</div>
                          </td>
                        </tr>
                    </aura:if>
                  </tbody>
              </table>
         </lightning:layoutItem>
    </lightning:layout>
</aura:component>